#!/bin/bash

if test "$#" -ne 4; then
  echo "jack_init DEVICE SAMPLE_RATE PERIODS FRAME_SIZE"
  exit 1
fi

device=$1
sample_rate=$2
periods=$3
frame_size=$4

jack_control ds alsa
jack_control eps realtime true
jack_control dps device $device
jack_control dps capture $device
jack_control dps playback $device
jack_control dps rate $sample_rate
jack_control dps nperiods $periods
jack_control dps period $frame_size
